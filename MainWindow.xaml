<Window x:Class="Clicker3Laba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clicker3Laba"
        mc:Ignorable="d"
        Title="Klikaem" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая часть -->
        <DockPanel Grid.Column="0" Background="White" Margin="5">
            <!-- Кнопка старт -->
            <Button x:Name="startButton" Content="START" FontSize="20" FontWeight="Bold" 
            Height="40" Margin="10" Click="StartButton_Click" Background="LightGreen" DockPanel.Dock="Top"/>

            <!-- Слайдер -->
            <StackPanel DockPanel.Dock="Top">
                <TextBlock Text="Difficulty level:" Margin="10,20,10,5"/>
                <Slider x:Name="difficultySlider" Minimum="1" Maximum="10" Value="5" 
                Margin="10,0,10,20" TickFrequency="1" IsSnapToTickEnabled="True"/>
            </StackPanel>

            <!-- Окно для вывода текста -->
            <StackPanel DockPanel.Dock="Top">
                <TextBlock Text="Game log:" Margin="10,10,10,5"/>
                <Border BorderBrush="DarkGray" BorderThickness="1" Margin="10" Height="Auto">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                        <TextBlock x:Name="statusText" Margin="5" TextWrapping="Wrap" Height="Auto"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>
        </DockPanel>

        <!-- Правая часть -->
        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Верхняя панель -->
                <RowDefinition Height="*"/>
                <!-- Канвас -->
            </Grid.RowDefinitions>

            <!-- Верхняя панель -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Background="White">
                <!-- Очки -->
                <TextBlock Margin="15,10" FontSize="16" FontWeight="Bold">
                    <Run Text="Score: "/>
                    <Run x:Name="scoreText" Text=""/>
                </TextBlock>

                <!-- Время -->
                <TextBlock Margin="15,10" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right">
                    <Run Text="Time: "/>
                    <Run x:Name="timeText" Text=""/>
                </TextBlock>
            </StackPanel>

            <!-- Канвас -->
            <Canvas x:Name="gameCanvas" Background="#FFF0F0F0" 
                    MouseDown="GameCanvas_MouseDown" Margin="10,41,10,10" Grid.RowSpan="2">
            </Canvas>
        </Grid>
    </Grid>
</Window>
